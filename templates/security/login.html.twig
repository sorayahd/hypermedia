{% extends 'index.html.twig' %}

{% block title %}Log in!{% endblock %}





{% block body %}
<br>
<center>
 {% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
 {{ message }}

 </div>
 
 {% endfor %}
 </center>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<style>
.divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
.h-custom {
height: calc(100% - 73px);
}
@media (max-width: 450px) {
.h-custom {
height: 100%;
}
}
</style>







<br>
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
		<img src="{{ absolute_url(asset('assets/Images/test.jpg'))}}" width="82%" 
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form method="post">
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Me Connecter</p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  class="form-control form-control-lg"
              placeholder="Email" />
            {# <label class="form-label" for="form3Example3">Addresse email</label> #}
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input type="password" name="password" id="inputPassword"  class="form-control form-control-lg"
              placeholder="Mot de passe " />
            <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
                                    >
            {# <label class="form-label" for="form3Example4">Mot de passe</label> #}
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
           
           
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-light btn-lg"  
              style="color:white; padding-left: 2.5rem; padding-right: 2.5rem; ">Se connecter</button>
              
            <p class="small fw-bold mt-2 pt-1 mb-0">Pas encore de compte? <a href="{{ path('app_register') }}"
                class="link-danger">créer mon compte</a></p>
                            <p class="small fw-bold mt-2 pt-1 mb-0"><a href="{{ path('forgotten_password') }}"
                >Mot de passe oublié?</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>
  
</section>

<!-- Section: Design Block -->


{% endblock %}
