
{% extends 'index.html.twig' %}

{% block title %}Mes commandes {% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.21.2/dist/bootstrap-table.min.css">
<style>

td {
    text-align: center;
}
th {
    text-align: center;
}
</style>
{% endblock %}

{% block body %}


<body>
<div class="container">
    <h2 class="text-center mt-4">Mes commandes </h2>
        {# {% for cart in carts %} #}
        <table id="dtBasicExample" 
        class="table table-striped table-bordered table-sm"
         cellspacing="0" width="100%"
         data-pagination="true"
         >

  <thead class="bg-light">
   
        <tr>
                <th>Réference de la commande</th>
                <th>Adresse de Livraison</th>
                <th>Transporteur</th>
                <th>Status</th>
                <th>Total </th>
                <th></th>
            </tr>
 
  </thead>
  <tbody>
   {% for cart in app.user.carts %}
 
      <tr>
        <div class="d-flex align-items-center " >
         
          <div class="ms-3">
           <td width="20%">{{ cart.reference}}</td>
             <td width="20%">{{ cart.Adresse | replace({'[spr]' : '<br>'}) | raw}}</td>
            <td width="20%"> {{ cart.Transporteur | replace({'[spr]' : '<br>'}) | raw}}</td>
            <td  width="20%"> En Cours </td>
            <td  width="20%" > {{ cart.Total}} €</td>
             <td  width="20%" > <a href="{{ path('app_panier_show', {'id': cart.id})}}" class="btn btn-primary" type="button" style="background-color:green">
             <i class="fa fa-eye" aria-hidden="true"></i>
            </a></td>
          </div>
        </div>
      </tr>

   {% endfor %}
  </tbody>
</table>
   </div>
   </br></br>
