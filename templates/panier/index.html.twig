{% extends 'index.html.twig' %}
{% block body %}

<body>


<style>
table,
table th {
  border: 1px solid #cccccc;
    text-align: center;
  
}

td {

  text-align: center;
  
}
</style>
<div class="page-wrap">

  <!-- Section-->
        <section class="test">
            <div class="container px-4 px-lg-5">
               <h2 class="text-center mt-4">Mes commandes </h2>
               <br>
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
 
               
                   
                   <table id="dtBasicExample" 
          class="table table-striped table-bordered table-sm"
         cellspacing="0" width="100%">

    <thead class="bg-light">
   
        <tr>
                <th>Réference de la commande</th>
                <th>Effectuée Le </th>
                <th>Adresse de Livraison</th>
                <th>Transporteur</th>
                <th>Status</th>
                <th>Total </th>
                <th></th>
            </tr>
 
  </thead>
  <tbody>
   {% for cart in app.user.carts %}
 
      <tr>
        <div class="d-flex align-items-center " >
         
          <div class="ms-3">
           <td width="18%">{{ cart.reference}}</td>
           <td width="15%">{{ cart.DateCommande|date('d-m-Y')}}</td>
             <td width="20%">{{ cart.Adresse | replace({'[spr]' : '<br>'}) | raw}}</td>
            <td width="20%"> {{ cart.Transporteur | replace({'[spr]' : '<br>'}) | raw}}</td>
                     
         <td  width="10%">    
         {% if cart.Status.Status== 'Expédiée' %}
         <span class="badge bg-danger danger text-white ms-1 rounded-pill">  
         {{ cart.Status.Status }} </span></td> 
       
          {% elseif cart.Status.Status== 'Nouveau' %}
         <span class="badge bg-info danger text-white ms-1 rounded-pill">  
         {{ cart.Status.Status }} </span></td> 

          {% elseif cart.Status.Status== 'En cours de préparation' %}
         <span class="badge bg-success danger text-white ms-1 rounded-pill">  
         {{ cart.Status.Status }} </span></td> 
        {% endif %}
          
            <td  width="10%" > {{ cart.Total // 100}} €</td>
             <td  width="20%" > <a href="{{ path('OrderDetails_show', {'id': cart.id})}}"
              class="btn btn-primary" type="button" style="background-color:green">
             <i class="fa fa-eye" aria-hidden="true"></i>
            </a></td>
          </div>
        </div>
      </tr>

   {% endfor %}
  </tbody>
   </table></br>
                   
                    </div>
                </div>
            </div>



</br>
</div>
</br>
          
</body>
   

   
{% endblock %}










