{% extends 'index.html.twig' %}

{% block title %}Adresse index{% endblock %}

{% block body %}
<div class="container">
    <h1>Adresse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>Complement</th>
                <th>Ville</th>
                <th>Postale</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.id }}</td>
                <td>{{ adresse.adresse }}</td>
                <td>{{ adresse.complement }}</td>
                <td>{{ adresse.ville }}</td>
                <td>{{ adresse.postale }}</td>
                <td>{{ adresse.pays }}</td>
                <td>
                    <a href="{{ path('app_adresse_show', {'id': adresse.id}) }}">consulter</a>
                    <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adresse_new') }}">Ajouter une nouvelle adresse</a>
    </div>
{% endblock %}
